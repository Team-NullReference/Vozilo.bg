extends ../_layout

block custom-styles
    link(rel='stylesheet', href='/static/styles/car-rent.css')

block body-content
    div.container.background.form-container
        div.row
            div.col-md-9.col-md-offset-3
                form.rent-form.text-center(action=`/car/${result.carId}/rent` method="POST")
                    h1.color-dark-success Наеми кола
                    div.rental-info
                        p
                            span Име: 
                            strong
                                = result.user.firstName + " " + result.user.lastName
                        p
                            span Имейл: 
                            strong
                                = result.user.email
                        p
                            span От дата: 
                            strong
                                = result.startDate.getDate() + '/'
                                = result.startDate.getMonth() + 1 + '/'
                                = result.startDate.getFullYear()
                            input.hidden(name="startDate" value=`${result.startDate}`)
                        p
                            span До дата: 
                            strong
                                = result.endDate.getDate() + '/'
                                = result.endDate.getMonth() + 1 + '/'
                                = result.endDate.getFullYear()
                            input.hidden(name="endDate" value=`${result.endDate}`)
                        h3.color-success Изпрати съобщение на собственика
                        textarea(rows="4" cols="50" name="message")
                    button.btn.btn-success.btn-lg
                        | Наеми
