extends ../_layout

block custom-styles
        link(rel="stylesheet", href="/static/styles/sign-up.css")
block custom-scripts
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.1/additional-methods.js")
            //- script(src='/static/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.js')
        script(src="/static/scripts/sign-up.js")

block body-content
        div(id="profile-wrapper" class="container text-center")
            h2 Промени профил информацията
            form.form-horizontal(action="/user/" + result.userForUpdate.username + "/update" id="signupForm" method="post")
                div.form-group
                    label.col-sm-3.control-label(for="username") Потребителско име
                    div.col-sm-9
                        input.form-control(type="text" name="username"  id="username" value=result.userForUpdate.username class="form-control" disabled)
                div.form-group
                    label.col-sm-3.control-label(for="fullName")  Име
                    div.col-sm-9
                        input(type="text" name="firstName"  id="firstname" value=result.userForUpdate.firstName class="form-control" autofocus)
                        input(type="text" name="lastName"  id="lastname" value=result.userForUpdate.lastName class="form-control" autofocus)
                div.form-group
                    label.col-sm-3.control-label(for="email") Email
                    div(class="col-sm-9")
                        input(type="email" name="email" id="email" value=result.userForUpdate.email class="form-control")
                div.form-group
                    label(for="picture" class="col-sm-3 control-label") Профилна Снимка
                    div.col-sm-9
                        input(type="url" name="picture" id="picture" value=result.userForUpdate.picture class="form-control")
                div.form-group
                    label(for="phoneNumber" class="col-sm-3 control-label") Телефон
                    div.col-sm-9
                        input(type="text" name="phoneNumber" id="phoneNumber" value=result.userForUpdate.phoneNumber class="form-control")        
                div.form-group
                    label(for="experience" class="col-sm-3 control-label") Шофьорски стаж
                    div.col-sm-9
                        input(type="text" name="drivingExpInYears" id="drivingExpInYears" value=result.userForUpdate.drivingExpInYears class="form-control")
                div.form-group
                    label.col-sm-3.control-label(for="city")  Град
                    div.col-sm-9
                        input(type="text" name="city" id="city" value=result.userForUpdate.address.city class="form-control")
                div.form-group
                    label.col-sm-3.control-label(for="street")  Адрес
                    div.col-sm-9
                        input(type="text" name="street" id="street" value=result.userForUpdate.address.street class="form-control")
                div.form-group
                   div.col-sm-9.col-sm-offset-3
                        button.btn.btn-lg.btn-primary.btn-block(type="submit" class="btn btn-primary btn-block") Промени
                        a.btn.btn-lg.btn-warning.btn-block(href="/user/" + result.userForUpdate.username) Назад

